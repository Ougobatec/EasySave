<Window x:Class="EasySave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave" MinWidth="1000" MinHeight="450">

    <Grid>
        
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <StackPanel Orientation="Horizontal"  VerticalAlignment="Bottom" Margin="0">
            <!-- Bouton Quitter en bas à droite -->
            <Button x:Name="QuitButton" Content="Quitter"
            Background="Red" Foreground="White" Padding="5,3"
            HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Margin="10,10,0,10"
            Click="CloseApp" Width="60"/>
           
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <!-- Bouton Accueil -->
            <Button x:Name="HomeButton" Content="Accueil" Width="59" Height="23" 
            HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,0,10,0" Click="HomeButton_Click"/>
            <!-- Bouton Paramètres -->
            <Button x:Name="Settings" Content="Settings" Width="59" Height="23"
            HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,0" Click="Settings_Click"/>
            <!-- Bouton Logs -->
            <Button x:Name="Logs" Content="Logs" Width="59" Height="23"
            HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,0" Click="Logs_Click"/>
        </StackPanel>
    </Grid>
</Window>
