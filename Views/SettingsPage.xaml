<Page x:Class="EasySave.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Background="#F0F0F0">
        <TextBlock x:Name="Title_Settings" Text="Settings" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock x:Name="Text_Language" Text="Language" Margin="0,0,10,0"/>
                <ComboBox x:Name="ComboBox_Language" Width="120" SelectionChanged="Setting_Changed">
                    <ComboBoxItem Content="fr"/>
                    <ComboBoxItem Content="en"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
                <TextBlock x:Name="Text_LogFormat" Text="Log Format" Margin="0,0,10,0"/>
                <ComboBox x:Name="ComboBox_LogFormat" Width="120" SelectionChanged="Setting_Changed">
                    <ComboBoxItem Content="json"/>
                    <ComboBoxItem Content="xml"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
                <TextBlock x:Name="Text_LimitSize" Text="Limit Size File (Mo)" Margin="0,0,10,0"/>
                <TextBox x:Name="TextBox_LimitSize" Width="120" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" TextChanged="Limit_size_fileTextBox_TextChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">

                <StackPanel Orientation="Vertical" Margin="0,40,20,0">
                    <TextBlock x:Name="Title_PriorityExtension" Text="Priority extension" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- ListBox des extensions disponibles -->
                        <ListBox x:Name="AvailableExtensionsListBox" ItemsSource="{Binding AvailablePriorityExtensions}" Width="100" Height="100" Grid.Column="0"/>

                        <!-- Boutons de déplacement -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0">
                            <Button x:Name="MoveToSelectedPriority" Content="➜" Width="40" Click="MoveToSelected"/>
                            <Button x:Name="MoveAllToSelectedPriority" Content="➜➜" Width="40" Click="MoveAllToSelected" Margin="0,5,0,5"/>
                            <Button x:Name="MoveToAvailablePriority" Content="⬅" Width="40" Click="MoveToAvailable"/>
                            <Button x:Name="MoveAllToAvailablePriority" Content="⬅⬅" Width="40" Click="MoveAllToAvailable" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- ListBox des extensions sélectionnées -->
                        <ListBox x:Name="SelectedExtensionsListBox" ItemsSource="{Binding SelectedPriorityExtensions}" Width="100" Height="100" Grid.Column="2" SelectionMode="Single"/>
                    </Grid>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="20,40,0,0">
                    <TextBlock x:Name="Title_EncryptedExtension" Text="Encrypted extension" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- ListBox des extensions disponibles -->
                        <ListBox x:Name="AvailableEncryptExtensionsListBox" ItemsSource="{Binding AvailableEncryptedExtensions}" Width="100" Height="100" Grid.Column="0"/>

                        <!-- Boutons de déplacement -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0">
                            <Button x:Name="MoveToSelectedEncrypted" Content="➜" Width="40" Click="MoveToSelected"/>
                            <Button x:Name="MoveAllToSelectedEncrypted" Content="➜➜" Width="40" Click="MoveAllToSelected" Margin="0,5,0,5"/>
                            <Button x:Name="MoveToAvailableEncrypted" Content="⬅" Width="40" Click="MoveToAvailable"/>
                            <Button x:Name="MoveAllToAvailableEncrypted" Content="⬅⬅" Width="40" Click="MoveAllToAvailable" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- ListBox des extensions sélectionnées -->
                        <ListBox x:Name="SelectedEncryptExtensionsListBox" ItemsSource="{Binding SelectedEncryptedExtensions}" Width="100" Height="100" Grid.Column="2" SelectionMode="Single"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
