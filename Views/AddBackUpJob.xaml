<Page x:Class="EasySave.AddBackUpJob"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBackUpJob">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Sauvegarde 1" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Grid.Row="0" Margin="0,10"/>

        <!-- Première ligne avec deux labels et deux champs -->
        <Grid Grid.Row="1" Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Nom Sauvegarde" FontWeight="Bold"/>
                <TextBox x:Name="BackupNameTextBox" Height="30" BorderBrush="Black" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Emplacement source" FontWeight="Bold"/>
                <TextBox x:Name="SourceDirectoryTextBox" Height="30" BorderBrush="Black" BorderThickness="1"/>
            </StackPanel>
        </Grid>

        <!-- Deuxième ligne avec deux labels et deux champs -->
        <Grid Grid.Row="2" Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Emplacement cible" FontWeight="Bold"/>
                <TextBox x:Name="TargetDirectoryTextBox" Height="30" BorderBrush="Black" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Type" FontWeight="Bold"/>
                <ComboBox x:Name="TypeComboBox" Height="30" BorderBrush="Black" BorderThickness="1">
                    <ComboBoxItem Content="Full"/>
                    <ComboBoxItem Content="Differential"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Bouton Confirmer centré -->
        <Button x:Name="ConfirmationButton" Content="Confirmer" Width="100" Height="25" 
                Grid.Row="4" Margin="0,30"
                HorizontalAlignment="Center" Click="ConfirmationButton_Click"/>
    </Grid>
</Page>