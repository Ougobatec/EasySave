<Page x:Class="EasySave.AddEditBackUpJob"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditBackUpJob">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleAddEditBackupJob" Text="Sauvegarde 1" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Grid.Row="0" Margin="0,10"/>

        <!-- Première ligne avec deux labels et deux champs -->
        <Grid Grid.Row="1" Margin="0,10,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Nom Sauvegarde" FontWeight="Bold"/>
                <TextBox x:Name="BackupNameTextBox" Height="30" BorderBrush="Black" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Emplacement source" FontWeight="Bold"/>
                <TextBox x:Name="SourceDirectoryTextBox" Height="30" BorderBrush="Black" BorderThickness="1"/>
            </StackPanel>
        </Grid>

        <!-- Deuxième ligne avec deux labels et deux champs -->
        <Grid Grid.Row="1" Margin="0,70,0,74" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Emplacement cible" FontWeight="Bold"/>
                <TextBox x:Name="TargetDirectoryTextBox" Height="30" BorderBrush="Black" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Type" FontWeight="Bold"/>
                <ComboBox x:Name="TypeComboBox" Height="30" BorderBrush="Black" BorderThickness="1">
                    <ComboBoxItem Content="Full"/>
                    <ComboBoxItem Content="Differential"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Bouton Confirmer centré -->
        <Button x:Name="ConfirmationButton" Content="Confirmer" Width="100" Height="25" 
                Grid.Row="2" Margin="0,43,0,54"
                HorizontalAlignment="Center" Click="ConfirmationButton_Click"/>

        <StackPanel x:Name="SavesList" Orientation="Vertical" Margin="10,69,-10,1" Grid.Row="2">
            <DockPanel Margin="10,40,10,5">
                <ListView x:Name="SavesListView" ItemsSource="{Binding Saves}" DockPanel.Dock="Top" SizeChanged="SavesListView_SizeChanged" SelectionMode="Extended" Width="475">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="175">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" TextAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Type" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Type}" TextAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Size" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Size}" TextAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Date" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Date}" TextAlignment="Left"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>

        </StackPanel>

        <!-- Error display area -->
        <TextBox Name="ErrorTextBox" Height="30" Margin="10,0,10,50" Background="LightCoral" Foreground="White"
             Visibility="Collapsed" IsReadOnly="True" HorizontalAlignment="Stretch"/>
    </Grid>
</Page>