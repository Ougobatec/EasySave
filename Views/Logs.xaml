<Page x:Class="EasySave.Logs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Logs">

    <Grid>
        <DataGrid Name="LogsDataGrid" ItemsSource="{Binding LogEntries}" AutoGenerateColumns="False" SizeChanged="LogsDataGrid_SizeChanged" IsReadOnly="True" SelectionUnit="Cell">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Header_Logs_Date" Header="Horodatage" Binding="{Binding Timestamp}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="IsHitTestVisible" Value="True"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Header_Logs_Name" Header="Nom sauvegarde" Binding="{Binding BackupName}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="IsHitTestVisible" Value="True"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Header_Logs_Source_Directory" Header="Emplacement source" Binding="{Binding Source}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="IsHitTestVisible" Value="True"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Header_Logs_Target_Directory" Header="Emplacement cible" Binding="{Binding Destination}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="IsHitTestVisible" Value="True"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Header_Logs_Size" Header="Taille" Binding="{Binding Size}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="IsHitTestVisible" Value="True"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Header_Logs_Transfer_Time" Header="Temps de transfert" Binding="{Binding TransfertTime}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="IsHitTestVisible" Value="True"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
