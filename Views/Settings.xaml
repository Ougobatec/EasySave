<Page x:Class="EasySave.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <Grid>
        <TextBlock Text="Paramètres" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <TextBlock Text="Type logs" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="TypeLogsComboBox" HorizontalAlignment="Left" Margin="180,100,0,0" Width="120" VerticalAlignment="Top" SelectionChanged="Setting_Changed">
            <ComboBoxItem Content="json"/>
            <ComboBoxItem Content="xml"/>
        </ComboBox>

        <TextBlock Text="Langage" HorizontalAlignment="Left" Margin="330,100,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="LanguageComboBox" HorizontalAlignment="Left" Margin="400,100,0,0" Width="120" VerticalAlignment="Top" SelectionChanged="Setting_Changed">
            <ComboBoxItem Content="fr"/>
            <ComboBoxItem Content="en"/>
        </ComboBox>
    </Grid>

</Page>
