<Page x:Class="EasySave.Views.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySave.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="Title_Edit" Text="Create a backupJob" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <!-- Première ligne avec deux labels et deux champs -->
        <Grid Grid.Row="1" Margin="0,10,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock x:Name="BackupNameTextBlock" Text="Nom Sauvegarde" FontWeight="Bold"/>
                <TextBox x:Name="BackupNameTextBox" Height="30" BorderBrush="Black" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock x:Name="SourceDirectoryTextBlock" Text="Emplacement source" FontWeight="Bold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- La TextBox prend tout l'espace restant -->
                        <ColumnDefinition Width="30" />
                        <!-- Le bouton a une largeur fixe -->
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SourceDirectoryTextBox" Height="30" BorderBrush="Black" BorderThickness="1" Grid.Column="0"/>
                    <Button Content="..." Width="30" Height="30" Click="BrowseSourceDirectory_Click" Grid.Column="1"/>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Deuxième ligne avec deux labels et deux champs -->
        <Grid Grid.Row="2" Margin="0,10,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock x:Name="TargetDirectoryTextBlock" Text="Emplacement cible" FontWeight="Bold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- La TextBox prend tout l'espace restant -->
                        <ColumnDefinition Width="30" />
                        <!-- Le bouton a une largeur fixe -->
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="TargetDirectoryTextBox" Height="30" BorderBrush="Black" BorderThickness="1" Grid.Column="0"/>
                    <Button Content="..." Width="30" Height="30" Click="BrowseTargetDirectory_Click" Grid.Column="1"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock x:Name="TypeTextBlock" Text="Type" FontWeight="Bold"/>
                <ComboBox x:Name="TypeComboBox" Height="30" BorderBrush="Black" BorderThickness="1">
                    <ComboBoxItem Content="Full"/>
                    <ComboBoxItem Content="Differential"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Bouton Confirmer centré -->
        <Button x:Name="Button_Submit" Content="Submit" Width="100" Height="25" 
            Grid.Row="3" Margin="0,20,0,0"
            HorizontalAlignment="Center" Click="ConfirmationButton_Click"/>

        <TextBlock x:Name="TitleSavesList" Text="Saves list" FontSize="20" FontWeight="Bold"
               HorizontalAlignment="Center" Grid.Row="4" Margin="0,20,0,10"/>

        <StackPanel x:Name="SavesList" Orientation="Vertical" Margin="10,10,10,10" Grid.Row="5">
            <DockPanel Margin="10,10,10,10">
                <DataGrid Name="SavesDataGrid" ItemsSource="{Binding SavesEntries}" AutoGenerateColumns="False" SizeChanged="SavesDataGrid_SizeChanged" IsReadOnly="True" SelectionUnit="Cell">
                    <DataGrid.Columns>
                        <DataGridTextColumn x:Name="Header_Saves_Date" Header="Horodatage" Binding="{Binding Timestamp}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="IsHitTestVisible" Value="True"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn x:Name="Header_Saves_Name" Header="BackUp name" Binding="{Binding BackupName}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="IsHitTestVisible" Value="True"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn x:Name="Header_Saves_Type" Header="Type" Binding="{Binding Source}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="IsHitTestVisible" Value="True"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn x:Name="Header_Saves_Size" Header="Taille" Binding="{Binding Size}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="IsHitTestVisible" Value="True"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </StackPanel>

        <!-- Error display area -->
        <TextBox Name="ErrorTextBox" Height="30" Margin="10,0,10,10" Background="LightCoral" Foreground="White"
         Visibility="Collapsed" IsReadOnly="True" HorizontalAlignment="Stretch"/>
    </Grid>
</Page>